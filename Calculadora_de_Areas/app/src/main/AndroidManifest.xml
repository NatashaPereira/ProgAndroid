<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="natashapereira.calculadora_de_areas">

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconeformas"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconeformas"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TelaRetangulo"
            android:screenOrientation="portrait"/>
        <activity android:name=".TelaTriangulo"
            android:screenOrientation="portrait"/>
        <activity android:name=".TelaCirculo"
            android:screenOrientation="portrait"/>
        <activity android:name=".TelaResultado"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>